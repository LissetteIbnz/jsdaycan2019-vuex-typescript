{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "noLib": false,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "compileOnSave": false
}